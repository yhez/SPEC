<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/decrypted_msg_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:background="@android:color/white"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/top_pannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:padding="@dimen/default_gap"
        android:rowCount="1">
        <!--hash ok or not-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1">

            <ImageView
                android:id="@+id/hash_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right" />

            <ImageButton
                android:id="@+id/hash"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="decryptedMsgClick"
                android:padding="@dimen/default_gap"
                android:src="@drawable/ic_hash" />
        </FrameLayout>
        <!--replay attack-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2">

            <ImageView
                android:id="@+id/replay_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right" />

            <ImageButton
                android:id="@+id/replay"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="decryptedMsgClick"
                android:padding="@dimen/default_gap"
                android:src="@drawable/replay_atack" />
        </FrameLayout>
        <!--session-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3">

            <ImageView
                android:id="@+id/session_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right" />

            <ImageButton
                android:id="@+id/session"
                style="@android:style/Widget.Holo.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="decryptedMsgClick"
                android:padding="@dimen/default_gap"
                android:src="@drawable/session" />
        </FrameLayout>
        <!--file to open-->
        <ImageButton
            android:id="@+id/open_file"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:onClick="decryptedMsgClick"
            android:padding="@dimen/default_gap"
            android:src="@drawable/after_attach" />
        <!--add to contact if doesn't exist-->
        <ImageButton
            android:id="@+id/add_contact_decrypt"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="4"
            android:onClick="addToContacts"
            android:padding="@dimen/default_gap"
            android:src="@drawable/plus" />
    </GridLayout>

    <RelativeLayout
        android:id="@+id/from"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_pannel">
        <ImageButton
            android:layout_alignParentRight="true"
            android:id="@+id/answer"
            android:paddingRight="@dimen/default_gap"
            android:paddingLeft="@dimen/default_gap"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="decryptedMsgClick"
            android:src="@drawable/respond" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/general_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/default_gap"
            android:textColor="@color/spec_black" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/from"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/default_gap">

        <TextView
            android:id="@+id/decrypted_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:gravity="start"
            android:textColor="@color/spec_black"
            android:textSize="25sp" />
    </ScrollView>
</RelativeLayout>