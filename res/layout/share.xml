<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="1"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/default_gap">

    <TextView
        android:id="@+id/your_public_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:alpha="1"
        android:gravity="center"
        android:padding="6dp"
        android:text="@string/share_public_descripton"
        android:textColor="@color/spec_black"
        android:textSize="25sp" />

    <View
        android:id="@+id/div_down"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/spec_blue" />

    <Button
        android:id="@+id/share_panel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/div_down"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="@dimen/default_gap"
        android:text="my details"
        android:onClick="notImp"
        android:textColor="@color/spec_black" />

    <View
        android:id="@+id/div_up"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_above="@id/share_panel"
        android:layout_centerHorizontal="true"
        android:background="@color/spec_blue" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/share_panel"
        android:layout_alignParentRight="true"
        android:src="@drawable/swipe" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/div_up"
        android:layout_below="@id/your_public_key"
        android:padding="@dimen/default_gap">

        <TextView
            android:id="@+id/me_public"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0"
            android:background="@android:drawable/alert_light_frame"
            android:gravity="fill_horizontal"
            android:padding="32dp"
            android:textColor="#28bedf"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/qr_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:alpha="1"
            android:background="@android:drawable/alert_light_frame"
            android:padding="32dp" />

        <View
            android:id="@+id/touch"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>