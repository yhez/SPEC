<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/default_gap">

    <RelativeLayout
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/your_public_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:alpha="1"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/share_public_descripton"
            android:textColor="#222"
            android:textSize="25sp" />
        <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:id="@+id/share_panel"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="#17adce"
            android:orientation="horizontal"
            android:padding="@dimen/default_gap">

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/button_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="share"
                android:padding="@dimen/default_gap"
                android:text="@string/share_button" />

            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:id="@+id/button_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:onClick="shareWeb"
                android:padding="@dimen/default_gap"
                android:text="@string/share_on_server" />
        </LinearLayout>
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_above="@id/share_panel"
            android:src="@drawable/swipe"
            android:layout_alignParentRight="true"/>
        <FrameLayout
            android:layout_marginBottom="@dimen/default_gap"
            android:padding="@dimen/default_gap"
            android:layout_below="@id/your_public_key"
            android:layout_width="match_parent"
            android:layout_above="@id/share_panel"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/me_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alpha="1"
                android:gravity="center"
                android:padding="6dp"
                android:textColor="#28bedf"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/qr_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:alpha="0"/>
            <View
                android:id="@+id/touch"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </RelativeLayout>
</FrameLayout>