<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:paddingTop="@dimen/default_gap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/files_details"
            android:textColor="@color/spec_black" />

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:background="@color/spec_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/file_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/file_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/file_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@color/spec_black" />

                <EditText
                    android:id="@+id/name_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/spec_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/qr_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/qr_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp" />

                <TextView
                    android:id="@+id/qr_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:textColor="@color/spec_black" />

                <EditText
                    android:id="@+id/qr_name_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/edit_text"
                    android:inputType="textNoSuggestions"
                    android:textColor="@color/spec_gray"
                    android:textCursorDrawable="@null"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/check_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/check_box"
            android:text="make it default?"
            android:textColor="@color/spec_black" />

        <TextView
            android:id="@+id/text_both_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/both_qr_file"
            android:textColor="@color/spec_black" />

        <View
            android:id="@+id/divider"
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/spec_blue" />


        <GridLayout
            android:id="@+id/gl_both"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"></GridLayout>

        <TextView
            android:id="@+id/title_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_file"
            android:textColor="@color/spec_black" />

        <View
            android:id="@+id/divider2"
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/spec_blue" />

        <GridLayout
            android:id="@+id/gl_app_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"></GridLayout>

        <TextView
            android:id="@+id/title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_image"
            android:textColor="@color/spec_black" />

        <View
            android:id="@+id/divider3"
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/spec_blue" />

        <GridLayout
            android:id="@+id/gl_app_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"></GridLayout>

    </LinearLayout>
</ScrollView>