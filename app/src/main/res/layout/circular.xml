<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <specular.systems.Dialogs.HoloCircularProgressBar
        android:id="@+id/circle"
        style="@style/CircularProgressBarLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:padding="@dimen/default_gap"
        android:id="@+id/title_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sec_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/spec_blue"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/dec_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="@dimen/default_gap"
            android:textColor="@color/spec_dark_blue"
            android:textSize="13sp" />
    </LinearLayout>
</merge>