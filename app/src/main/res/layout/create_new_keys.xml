<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:alpha="0"
    android:background="@android:color/white">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <GridLayout
            android:id="@+id/grid_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="1">

        </GridLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/scroll"
        android:orientation="vertical"
        android:paddingBottom="@dimen/default_gap"
        android:paddingLeft="@dimen/default_gap"
        android:paddingTop="@dimen/default_gap">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="@dimen/default_gap"
            android:text="@string/welcome"
            android:textColor="@color/spec_black"
            android:textSize="19sp" />


        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:hint="@string/hint_enter_your_name"
            android:inputType="textPersonName"
            android:padding="@dimen/default_gap"
            android:textColor="@color/spec_black"
            android:textColorHint="@color/spec_gray"
            android:textCursorDrawable="@null" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text"
            android:hint="@string/hint_enter_your_email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/default_gap"
            android:textColor="@color/spec_black"
            android:textColorHint="@color/spec_gray"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/gesture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/swipe_create_keys" />
    </LinearLayout>
</RelativeLayout>
