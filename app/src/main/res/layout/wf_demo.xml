<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/girl"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="70dp"
        android:layout_gravity="left"
        android:id="@+id/title"
        android:src="@drawable/masthead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8.0dip"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/sign"
        android:alpha="1"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/default_gap"
        android:orientation="vertical"
        android:background="@drawable/signon_module"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginBottom="@dimen/default_gap"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ImageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7.0dip"
                android:src="@drawable/signon_login_lock"/>

            <TextView
                android:textSize="21.0sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Your Accounts"
                android:layout_toRightOf="@id/ImageView1"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <EditText
            android:layout_gravity="center_horizontal"
            android:textSize="15.0sp"
            android:textColor="#ff000000"
            android:textColorHint="#ff999999"
            android:background="#ffffff"
            android:paddingLeft="5.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="264.0dip"
            android:minHeight="35.0dip"
            android:hint="Online Username"
            android:inputType="textFilter"
            android:imeOptions="actionNext"
            android:textCursorDrawable="@null"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_gravity="center_horizontal"
            android:textSize="15.0sp"
            android:textColor="#ff000000"
            android:textColorHint="#ff999999"
            android:background="#ffffff"
            android:paddingLeft="5.0dip"
            android:paddingTop="2.0dip"
            android:paddingRight="5.0dip"
            android:paddingBottom="2.0dip"
            android:layout_width="264.0dip"
            android:layout_marginTop="12.0dip"
            android:minHeight="35.0dip"
            android:hint="Online Password"
            android:inputType="textPassword"
            android:imeOptions="actionGo"
            android:textCursorDrawable="@null"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/default_gap"
            android:layout_width="wrap_content"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_height="wrap_content">

            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@android:color/black"
                android:text="Save Username"
                android:layout_marginRight="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="@android:color/black"
                style="?android:attr/buttonBarButtonStyle"
                android:padding="@dimen/default_gap"
                android:layout_width="wrap_content"
                android:text="Sign On"
                android:onClick="signOn"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginLeft="70dp"
        android:scaleType="centerInside"
        android:layout_gravity="bottom"
        android:src="@drawable/icon_stagecoach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>